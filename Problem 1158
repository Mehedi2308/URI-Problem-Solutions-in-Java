package uRI;
import java.util.*;

public class P1117 {

	public static void main(String[] args) {
		Scanner num = new Scanner(System.in);
		
		int N = num.nextInt();
		for(int i=0;i<N;i++) {
			int sum=0;
			int X = num.nextInt();
			int Y = num.nextInt();
			for(int j=X; j<X+(Y*2);j++) {
				if(j%2!=0) {
					sum+=j;
				}
			}
			System.out.println(sum);
		}
		num.close();
		}
	}
